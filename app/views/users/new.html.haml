%h1 Sign Up
= form_for(@user) do |f|
  = render 'shared/user_error_messages'
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :email
      %td= f.text_field :email
    %tr
      %td= f.label :password
      %td= f.password_field :password
    %tr
      %td= f.label :password_confirmation, "Confirm Password"
      %td= f.password_field :password_confirmation
    %tr
      %td
      %td= f.submit "Create Account"